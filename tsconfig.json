{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      // samples project
      "samples/*": ["samples/*"],
      "components/*": ["samples/js/components/*"],
      "utils/*": ["src/utils/*"],
    },

    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2019"
  },

  "include": [
    "src",
    "./global.d.ts"
  ],

  "exclude": [
    "./src/*.js",
    "./node_modules",
    "./build",
    "./dist",
    "*.js"
  ]
}